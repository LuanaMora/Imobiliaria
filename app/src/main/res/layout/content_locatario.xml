<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LocatarioActivity"
    tools:showIn="@layout/activity_locatario">

    <TextView
        android:id="@+id/tvLabelLocatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvLocatario"
        android:background="@drawable/borda_arredondada"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/text_size"

        />


    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etCodigo"
        android:textSize="@dimen/text_sizeComponents"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"/>

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etNome"
        android:textSize="@dimen/text_sizeComponents"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"/>

    <EditText
        android:id="@+id/etTamanho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etTelefone"
        android:textSize="@dimen/text_sizeComponents"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"/>



    <Button
        android:id="@+id/btEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/btEndereco"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_weight="1"
            android:background="@drawable/botao"
            android:hint="@string/btSalvar"
            android:textColorHint="@color/colorWhite"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/btCancelar"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_weight="1"
            android:background="@drawable/botao"
            android:textColorHint="@color/colorWhite"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>